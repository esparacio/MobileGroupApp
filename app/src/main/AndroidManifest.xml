<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.pwageselon.campuslocator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AcademicsActivity"
            android:label="@string/title_activity_academics" >
        </activity>
        <activity
            android:name=".DiningActivity"
            android:label="@string/title_activity_dining" >
        </activity>
        <activity
            android:name=".HousingActivity"
            android:label="@string/title_activity_housing" >
        </activity>
        <activity
            android:name=".RecreationActivity"
            android:label="@string/title_activity_recreation" >
        </activity>
        <activity
            android:name=".OtherActivity"
            android:label="@string/title_activity_other" >
        </activity>
    </application>

</manifest>
