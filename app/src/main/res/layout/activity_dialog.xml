<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.pwageselon.elonlocator.DialogActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buildingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="Acorn"
        android:textAppearance="?android:attr/textAppearanceLarge">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/dialog_text_width"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dialog_text_margin"
            android:gravity="right"
            android:text="@string/monday"/>

        <TextView
            android:id="@+id/monday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/dialog_text_width"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dialog_text_margin"
            android:gravity="right"
            android:text="@string/tuesday" />

        <TextView
            android:id="@+id/tuesday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/dialog_text_width"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dialog_text_margin"
            android:gravity="right"
            android:text="@string/wednesday" />

        <TextView
            android:id="@+id/wednesday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/dialog_text_width"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dialog_text_margin"
            android:gravity="right"
            android:text="@string/thursday"/>

        <TextView
            android:id="@+id/thursday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/dialog_text_width"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dialog_text_margin"
            android:gravity="right"
            android:text="@string/friday" />

        <TextView
            android:id="@+id/friday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/dialog_text_width"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dialog_text_margin"
            android:gravity="right"
            android:text="@string/saturday" />

        <TextView
            android:id="@+id/saturday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="@dimen/dialog_text_width"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dialog_text_margin"
            android:gravity="right"
            android:text="@string/sunday" />

        <TextView
            android:id="@+id/sunday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"/>

    </LinearLayout>

    <Button
        android:id="@+id/okay_button"
        android:layout_width="@dimen/dialog_text_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dialog_text_margin"
        android:text="@string/okay_button" />

</LinearLayout>
